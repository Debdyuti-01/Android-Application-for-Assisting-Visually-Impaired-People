<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/background"
    tools:context=".Main2Activity">

    <ImageView
        android:layout_width="241dp"
        android:layout_height="163dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/group" />

    <TextView
        android:id="@+id/text"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="300dp"
        android:text="To detect Currency Notes swipe left, to Read Documents swipe right, and to send a Text swipe up."
        android:textColor="#ffff"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/text"
        android:layout_marginTop="165dp"
        android:text="Pitch"
        android:textColor="#fff"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="417dp" />

    <SeekBar
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text"
        android:layout_marginBottom="-122dp"
        android:background="@color/text_color"
        android:progress="50"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="480dp" />

    <TextView
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/s1"
        android:layout_marginTop="73dp"
        android:text="Speed"
        android:textColor="#fff"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="572dp" />

    <SeekBar
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/s1"
        android:layout_marginTop="116dp"
        android:background="@color/text_color"
        android:progress="50"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="640dp" />


</RelativeLayout>